{
  "name": "generator-qxy",
  "version": "0.1.12",
  "keywords": [
    "yeoman-generator",
    "qxy-fe"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "main": "generators/app/index.js",
  "types": "generators/app/index.d.ts",
  "files": [
    "generators"
  ],
  "scripts": {
    "build": "npm run clean && tsc && npm run copy",
    "clean": "rimraf generators *.tsbuildinfo",
    "copy": "copyfiles -a -u 1 -V src/*/templates/** generators",
    "dev": "npm run clean && tsc-watch --incremental --onSuccess \"npm run copy\"",
    "lint": "eslint --ext .ts src",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@qxy/prettier-config",
  "eslintConfig": {
    "extends": [
      "@qxy/prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-underscore-dangle": "off"
    },
    "root": true
  },
  "eslintIgnore": [
    "generators",
    "types",
    "src/**/templates/**/*"
  ],
  "dependencies": {
    "ejs": "^3.1.6",
    "has-yarn": "^2.1.0",
    "ora": "^5.4.0",
    "sort-package-json": "^1.50.0",
    "yeoman-generator": "^5.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@qxy/eslint-config-prettier": "^0.2.5",
    "@qxy/prettier-config": "^0.2.0",
    "@types/ejs": "^3.0.6",
    "@types/yeoman-generator": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  }
}
