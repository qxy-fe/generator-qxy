{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vitest/importMeta"],
    "outDir": "generators",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./packages/**/*.ts",
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "./*.config.ts/**/*.ts"
  ],
  "exclude": ["node_modules", "generators", "dist", "coverage", "**/templates/**"]
}
