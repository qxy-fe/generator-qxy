{
  "name": "generator-qxy",
  "version": "0.1.21",
  "keywords": [
    "yeoman-generator",
    "qxy-fe"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "type": "module",
  "exports": "./generators/app/index.js",
  "types": "generators/app/index.d.ts",
  "files": [
    "generators"
  ],
  "scripts": {
    "build": "npm run clean && tsc && npm run copy",
    "clean": "rimraf generators *.tsbuildinfo",
    "copy": "copyfiles -a -u 1 -V src/*/templates/** generators",
    "dev": "npm run clean && tsc-watch --incremental --onSuccess \"npm run copy\"",
    "lint": "eslint --ext .ts src",
    "lint:cspell": "cspell **",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@qxy/prettier-config",
  "eslintConfig": {
    "extends": [
      "@qxy/prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-underscore-dangle": "off"
    },
    "root": true
  },
  "eslintIgnore": [
    "generators",
    "types",
    "src/**/templates/**/*"
  ],
  "resolutions": {
    "@cspell/dict-php": "1.0.24"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "has-yarn": "^3.0.0",
    "ora": "^6.0.1",
    "sort-package-json": "^1.53.1",
    "yeoman-generator": "^5.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@qxy/eslint-config-prettier": "^0.2.12",
    "@qxy/prettier-config": "^0.3.0",
    "@types/ejs": "^3.1.0",
    "@types/yeoman-generator": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.1.1",
    "copyfiles": "^2.4.1",
    "cspell": "^5.13.0",
    "eslint": "^8.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
