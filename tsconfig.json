{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "generators",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*.ts"]
}
