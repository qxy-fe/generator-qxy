{
  "name": "generator-qxy",
  "version": "0.0.0",
  "main": "generators/app/index.js",
  "types": "generators/app/index.d.ts",
  "keywords": [
    "yeoman-generator",
    "qxy-fe"
  ],
  "files": [
    "generators"
  ],
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf generators *.tsbuildinfo",
    "build": "npm run clean && tsc && npm run copy",
    "dev": "npm run clean && tsc-watch --incremental --onSuccess \"npm run copy\"",
    "copy": "copyfiles -a -u 1 src/**/templates/**/* src/**/templates/**/.* generators",
    "lint": "eslint --ext .ts src",
    "prepublishOnly": "npm run build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@qxy",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/standard",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-underscore-dangle": "off"
    }
  },
  "eslintIgnore": [
    "generators",
    "types",
    "src/**/templates/**/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@qxy/eslint-config": "^0.0.1",
    "@qxy/prettier-config": "^0.0.1",
    "@types/ejs": "^3.0.5",
    "@types/yeoman-generator": "^4.11.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "conventional-changelog": "^3.1.23",
    "conventional-changelog-cli": "^2.1.0",
    "copyfiles": "^2.4.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.5"
  },
  "prettier": "@qxy/prettier-config",
  "dependencies": {
    "ejs": "^3.1.5",
    "has-yarn": "^2.1.0",
    "ora": "^5.1.0",
    "sort-package-json": "^1.46.1",
    "yeoman-generator": "^4.12.0"
  }
}
