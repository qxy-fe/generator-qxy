{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vitest/importMeta"],
    "resolveJsonModule": true,
    "outDir": "generators",
    "removeComments": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./scripts/**/*.ts",
    "./packages/**/*.ts",
    "./*.config.ts"
  ],
  "exclude": [
    "**/dist/**",
    "**/coverage/**",
    "**/templates/**",
    "**/generators/**",
    "**/node_modules/**"
  ]
}
