{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": false,
    "module": "CommonJS",
    "newLine": "LF",
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "ES2017",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "generators"
  },
  "include": ["src/**/*.ts"]
}
