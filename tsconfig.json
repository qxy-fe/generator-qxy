{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "generators",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strictNullChecks": true
  },
  "include": ["./src", "./tests", "./tsup.config.ts", "./vitest.config.ts"]
}
