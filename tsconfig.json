{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "types": ["vitest/importMeta"],
    "outDir": "generators",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./packages",
    "./scripts",
    "./tests",
    "./vitest.config.ts",
    "./tsup.config.ts"
  ],
  "exclude": ["node_modules", "generators", "dist", "coverage", "**/templates/**"]
}
